                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bonusPrice2"
                    android:textColor="@color/colorWhite" android:textSize="30sp" android:textStyle="bold"
                    android:textAlignment="textEnd"/>
        </TableRow>
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:gravity="start"
                android:layout_marginBottom="5dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bonusTV3" android:textAlignment="textEnd"
                    android:textStyle="bold" android:textSize="30sp" android:textColor="@color/colorWhite"
                    android:layout_marginLeft="10dp"/>
