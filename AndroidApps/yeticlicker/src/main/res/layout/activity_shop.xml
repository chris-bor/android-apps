                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bonusTV2" android:textStyle="bold"
                    android:textAlignment="textEnd" android:textSize="30sp" android:textColor="@color/colorWhite"
                    android:layout_marginLeft="10dp"/>
