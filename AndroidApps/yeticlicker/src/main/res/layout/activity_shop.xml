<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.yeticlicker.ShopActivity" android:background="@drawable/main_background">

    <TextView
            android:layout_width="45dp"
            android:layout_height="37dp"
            android:id="@+id/closeShop"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.948"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/bonusLayout"
            app:layout_constraintVertical_bias="0.972"
            android:text="X" android:textSize="30sp" android:textStyle="bold" android:textAlignment="center"
            android:textColor="@android:color/white"/>
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/bonusLayout"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.8" android:gravity="center">

        <TableRow android:layout_width="wrap_content" android:layout_height="70dp"
                  android:gravity="start" android:layout_marginBottom="5dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/bonusTV1" android:textAlignment="textEnd"
                    android:textStyle="bold" android:textSize="30sp" android:textColor="@color/colorWhite"
                    android:layout_marginLeft="10dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="53dp" app:srcCompat="@drawable/bonus_one_1"
                    android:id="@+id/bonusView1" android:layout_marginLeft="20dp"/>
            <TextView
                    android:layout_height="wrap_content" android:id="@+id/bonusPrice1" android:textStyle="bold"
                    android:textColor="@color/colorWhite" android:textSize="30sp" android:textAlignment="textEnd"
                    android:layout_width="wrap_content"/>
        </TableRow>
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:gravity="start"
                android:layout_marginBottom="5dp">
